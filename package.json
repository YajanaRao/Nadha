{
  "name": "nadha",
  "version": "0.0.1",
  "private": true,
  "description": "Streaming music player that serves all your needs",
  "scripts": {
    "bootstrap": "node_modules/.bin/lerna bootstrap",
    "android": "lerna run --scope @nadha/mobile android",
    "storybook": "lerna run --scope @nadha/views storybook",
    "web": "yarn workspace @nadha/web run start"
  },
  "workspaces": {
    "nohoist": [],
    "packages": [
      "packages/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "react-native": "0.62.2"
  },
  "resolutions": {
    "@types/react": "16.9.35"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.21.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^1.11.1"
  }
}
